{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@thorswap-lib/xchain-binance": ["packages/xchain-binance"],
      "@thorswap-lib/xchain-bitcoin": ["packages/xchain-bitcoin"],
      "@thorswap-lib/xchain-bitcoincash": ["packages/xchain-bitcoincash"],
      "@thorswap-lib/xchain-client": ["packages/xchain-client"],
      "@thorswap-lib/xchain-cosmos": ["packages/xchain-cosmos"],
      "@thorswap-lib/xchain-crypto": ["packages/xchain-crypto"],
      "@thorswap-lib/xchain-doge": ["packages/xchain-doge"],
      "@thorswap-lib/xchain-ethereum": ["packages/xchain-ethereum"],
      "@thorswap-lib/xchain-litecoin": ["packages/xchain-litecoin"],
      "@thorswap-lib/xchain-polkadot": ["packages/xchain-polkadot"],
      "@thorswap-lib/xchain-solana": ["packages/xchain-solana"],
      "@thorswap-lib/xchain-terra": ["packages/xchain-terra"],
      "@thorswap-lib/xchain-thorchain": ["packages/xchain-thorchain"],
      "@thorswap-lib/xchain-util": ["packages/xchain-util"]
    },
    "jsx": "react",
    "types": ["jest", "node"],

    "outDir": "lib",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "importHelpers": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  }
}
